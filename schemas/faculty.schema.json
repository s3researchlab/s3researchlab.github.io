{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://https://s3researchlab.github.io/schemas/faculty.schema.json",
    "type": "array",
        "description": "The list of students",
        "items": {
            "type": "object",
            "required": [
                "name",
                "position",
                "affiliation",
                "status"
            ],
            "properties": {
                "name": {
                    "type": "string",
                    "description": "The faculty's name"
                },
                "image": {
                    "type": "string",
                    "description": "The faculty's image"
                },
                "position": {
                    "type": "string",
                    "description": "The faculty's position"
                },
                "affiliation": {
                    "type": "string",
                    "description": "The faculty's affiliation"
                },
                "url": {
                    "type": "string",
                    "description": "The faculty's url"
                },
                "status": {
                    "type": "string",
                    "description": "The faculty's status",
                    "enum": [
                        "pi",
                        "affiliated"
                    ]
                }
            }
        }
}
