{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://https://s3researchlab.github.io/schemas/students.schema.json",
    "type": "array",
        "description": "The list of students",
        "items": {
            "type": "object",
            "required": [
                "name",
                "when",
                "status"
            ],
            "properties": {
                "name": {
                    "type": "string",
                    "description": "The student's name"
                },
                "when": {
                    "type": ["integer", "string"],
                    "description": "The period the student was part of the lab"
                },
                "degree": {
                    "type": "string",
                    "description": "The student's degree",
                    "enum": [
                        "undergraduate",
                        "master",
                        "phd"
                    ]
                },
                "status": {
                    "type": "string",
                    "description": "The conference type",
                    "enum": [
                        "current",
                        "former"
                    ]
                }
            }
        }
}
